@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Forget Password";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

<br />
<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="ForgetPassword">
            <input class="text email" type="email" asp-for="Email" placeholder="Email" required="" />
            <span asp-validation-for="@Model.Email"></span>
            <input type="submit" value="Forget Password">
        </form>
        <br/>
        <div class="col-6">
            <p>
                Back To Login Page  <a class="btn btn-warning" asp-action="SignIn">
                    <i class="fas fa-sign-in"></i> LogIn
                </a>
            </p>
    </div>
        </div>
    </div>

</div>
@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
     }

