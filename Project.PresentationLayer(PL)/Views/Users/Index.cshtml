@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<br />
<form class="my-3" asp-action="Index" asp-controller="Users">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="search by name" name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>
<br />
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(A=>A.Id)</th>
                <th>@Html.DisplayNameFor(A=>A.UserName)</th>
                <th>@Html.DisplayNameFor(A=>A.Email)</th>
                <th>@Html.DisplayNameFor(A=>A.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(A=>A.IsAgree)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(A=>item.Id)</td>
                    <td>@Html.DisplayFor(A=>item.UserName)</td>
                    <td>@Html.DisplayFor(A=>item.Email)</td>
                    <td>@Html.DisplayFor(A=>item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(A=>item.IsAgree)</td>
                    <partial name="_ButtonsViewPartial" model="@item.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-5">
        <h3>No Users Found</h3>
    </div>
}
